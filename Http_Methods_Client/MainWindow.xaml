<Window x:Class="Http_Methods_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Http_Methods_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ComboBox Height="50" Width="300" Name="combo" VerticalAlignment="Top"  SelectionChanged="combo_SelectionChanged" ></ComboBox>
        <ListBox Grid.Row="1" Name="list" Visibility="Hidden" ></ListBox>
        <StackPanel Grid.Row="1" Margin="30" Name="fillid" Visibility="Hidden" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,20,0" >
                <TextBlock Text="Id" Height="40" FontSize="25" Width="50" HorizontalAlignment="Left" TextAlignment="Center" ></TextBlock>
                <TextBox Name="txtid" Height="40" Width="200"></TextBox>
            </StackPanel>
            <Button Name="Okbtn" Content="OK" FontSize="20" Grid.Row="1" Height="40" Width="150" Margin="50" Click="Okbtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
